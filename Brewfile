# Taps
tap 'caskroom/cask'
tap 'caskroom/fonts'
tap 'caskroom/versions'
tap 'homebrew/bundle'
tap 'homebrew/dupes'
tap 'homebrew/science'

# Make sure apps get installed in system Applications dir
cask_args appdir: '/Applications'

# Install GNU core utilities (those that come with OS X are outdated)
brew 'coreutils'

# Install GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed
brew 'findutils'

# Install Bash 4
brew 'bash'

# Install Binaries
brew 'bash-completion'
brew 'cowsay'
brew 'curl'
brew 'fontconfig'
brew 'gcc'
brew 'git'
brew 'gnuplot'
brew 'graphicsmagick'
brew 'imagemagick'
brew 'lua'
brew 'lynx'
brew 'mongodb'
brew 'node'
brew 'openssl'
brew 'pkg-config'
brew 'the_silver_searcher'
brew 'sqlite'
brew 'trash'
brew 'tree'
brew 'postgresql'
brew 'wget'

